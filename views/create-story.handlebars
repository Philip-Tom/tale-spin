<main class="container mt-4">
  {{#if loggedIn}}
    <form class="border p-4" id="create-story-form">
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input
          type="text"
          id="title"
          name="title"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea
          id="description"
          name="description"
          class="form-control"
          rows="10"
          required
        ></textarea>
      </div>

      <div class="mb-3">
        <label for="content" class="form-label">Content:</label>
        <textarea
          id="content"
          name="content"
          class="form-control"
          rows="10"
          required
        ></textarea>
      </div>

      <div class="mb-3">
        <label for="series" class="form-label">Series:</label>
        <input
          type="text"
          id="series"
          name="series"
          class="form-control"
          required
        />
      </div>

      <button type="submit" class="btn btn-primary">Create Story</button>
    </form>
    <script src="/js/createStory.js"></script>
  {{else}}
    <p class="mt-4">Please log in to create a story.</p>
  {{/if}}
</main>